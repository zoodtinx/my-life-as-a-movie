generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  movies   Movie[]
  createdAt DateTime @default(now())
}

model Movie {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  genre     String
  logline   String
  review    String?
  alternateEnding String?
  sequelIdea String?
  summary   String?
  createdAt DateTime @default(now())
}

enum Genre {
  COMEDY_DRAMA
  ADVENTURE_FANTASY
  DARK_COMEDY
  HORROR
  COMING_OF_AGE
  SLICE_OF_LIFE
  ACTION_THRILLER
  MYSTERY_SUSPENSE
  ROMANTIC_DRAMA
  FEEL_GOOD_MUSICAL
}
