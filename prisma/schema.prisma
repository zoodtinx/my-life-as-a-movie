generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(uuid())
  name            String
  email           String          @unique
  personalContext String
  movies          Movie[]  
  weeklySummary   WeeklySummary[]
  createdAt       DateTime        @default(now())
}

model Movie {
  id              String   @id @default(uuid())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  genre           String
  logline         String
  review          String?
  sequelIdea      String?
  similarMovie   Json?    
  summary         String?  
  date            String
  createdAt       DateTime @default(now())
}

model WeeklySummary {
  id                String   @id @default(cuid())
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String
  week              String
  headline          String
  mainSummary       String
  mostFrequentGenre String
  recommendation    String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum Genre {
  COMEDY_DRAMA
  ADVENTURE_FANTASY
  DARK_COMEDY
  HORROR
  COMING_OF_AGE
  SLICE_OF_LIFE
  ACTION_THRILLER
  MYSTERY_SUSPENSE
  ROMANTIC_DRAMA
  FEEL_GOOD_MUSICAL
}